source :rubygems

group :development, :test do
  # Generic
  gem "bundler"
  gem "rake"
  gem "json"
  gem "bson_ext"

  # Deployment
  gem "git"

  # Testing
  gem "mocha"
  gem "shoulda"
  gem "test-unit"
  gem "ci_reporter"
  gem "ruby-prof"

  # Java
  platforms :jruby do
    gem "bouncy-castle-java"
    gem "jruby-launcher"
    gem "jruby-openssl"
  end
end
